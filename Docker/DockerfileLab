FROM openjdk:8u151-jdk
 
RUN mkdir --parent /opt/openRoberta/lib /opt/openRoberta/OpenRobertaParent
WORKDIR /opt/openRoberta

EXPOSE 9001
VOLUME /opt/db
 
COPY ["startServer.sh","./"]
COPY ["lib/","./lib/"]
COPY ["OpenRobertaParent/","./OpenRobertaParent/"]
RUN chmod -R ugo+rwx . 

ENTRYPOINT ["/opt/openRoberta/startServer.sh"]
# usually -d parameter are needed, when the container is started, e.g. -d database.mode=embedded -d database.parentdir=/opt/db