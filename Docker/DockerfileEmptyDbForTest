FROM openjdk:8u151-jdk

RUN mkdir --parent /opt/openRoberta/lib /opt/db
EXPOSE 9001
WORKDIR /opt/openRoberta
 
ARG version
COPY ["db-${version}","/opt/db/"]

COPY ["startDbServer.sh","./"]
COPY ["lib/","./lib/"]
RUN chmod -R ugo+rwx startDbServer.sh

ENV versionE=${version}
ENTRYPOINT /opt/openRoberta/startDbServer.sh ${versionE}